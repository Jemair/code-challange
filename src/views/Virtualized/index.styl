.row
  display: flex
  background: #fff
  .bigImg
    display: flex
    align-items: center
    width: 13rem
    height: 15rem
    margin-right: .5rem
    img
      width: 100%
      height: 100%
  .content
    padding: 1rem
.gap
  height: .3rem
  background: transparent

.list
  position: absolute
  top: 0
  left: 0
  width: 100%
  min-height: 100%
  transform: translate3d(0, 0, 0)
  &.leaveClassName
    transform-origin: left
    transition: transform 0.8s
    transform: translate3d(-100%, 0, 0)

