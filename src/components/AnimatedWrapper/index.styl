:global
  .aniWrap
    position: fixed
    overflow: scroll
    touch-action: pan-y;
    -webkit-overflow-scrolling: touch
    width: 100%
    height: 100%
    background: #fff
    top: 0
    left: 0

  .aniAppear
    transform: translate3d(400px, 0, 0)
  .aniAppearActive
    transform: translate3d(0, 0, 0)
    transition: transform 0.3s ease-out

  .aniLeave
    transform: translate3d(0, 0, 0)
  .aniLeaveActive
    transform: translate3d(-100px, 0, 0)
    transition: transform 0.3s ease-out

